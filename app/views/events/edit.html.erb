<h1>Edit your event</h1>

<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% else %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", value: @event.name %>
  </div>

  <div class="form-group">
    <%= f.label :venue_id %>
    <%= f.select :venue_id, @venues.map{|v| [v.name, v.id]}  , {prompt: 'Select Venue'},  {required: 'true', autofocus: 'true', class: 'form-control'}  %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.select :category_id, @categories.map{|c| [c.name, c.id]}  , {prompt: 'Select Category'},  {required: 'true', autofocus: 'true', class: 'form-control'}  %>
  </div>

  <div class="form-group">
    <%= f.label :hero_image_url %>
    <%= f.text_field :hero_image_url, class: "form-control", value: @event.hero_image_url %>
  </div>

  <div class="form-group">
    <%= f.label :extended_html_description %>
    <%= f.text_field :extended_html_description, class: "form-control", value: @event.extended_html_description %>
  </div>

  <div class="form-group">
    <%= f.label :starts_at %>
    with format dd/mm/yyyy hh:mm:ss
    <%= f.text_field :starts_at, class: "form-control", id: "datepicker", value: @event.starts_at %>
  </div>

  <div class="form-group">
    <%= f.label :ends_at %>
    with format dd/mm/yyyy hh:mm:ss
    <%= f.text_field :ends_at, class: "form-control", id: "datepicker", value: @event.ends_at %>
  </div>

  <div class="form-group">
        <%= f.submit 'Save Event' , class: 'btn btn-block btn-info' %>
  </div>
  <% end %>
<% end %>